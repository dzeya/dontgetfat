{
  "version": 2,
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "maxLambdaSize": "15mb",
        "installCommand": "npm install",
        "buildCommand": "npm run build",
        // Assuming your Vite build output is in 'web/dist'
        "outputDirectory": "dist" 
      }
    },
    {
      "src": "api/package.json",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": ["dist/**"],
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/dist/main.js"
    },
    // Route remaining traffic to the frontend's index.html
    // Vercel handles serving static assets from the output dir automatically
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}