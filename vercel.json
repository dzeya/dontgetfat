{
  "version": 2,
  "buildCommand": "cd web && npm install && npm run build && cd ../api && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "web/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/"
    }
  ],
  "functions": {
    "api/**/*": {
      "runtime": "@vercel/node@2.15.10",
      "maxDuration": 60,
      "memory": 1024
    }
  }
}