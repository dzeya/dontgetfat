{
  "version": 2,
  "buildCommand": "cd web && npm install && npm run build && cd ../api && npm install --legacy-peer-deps && npm run build",
  "outputDirectory": "web/dist",
  "framework": "vite",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/vercel.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "builds": [
    {
      "src": "web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/vercel.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/dist/**"],
        "maxDuration": 60
      }
    }
  ]
}